import java.util.Scanner;


public class H4_11 {

	public static void main(String[] args) {
		 Scanner input = new Scanner(System.in, "UTF-8");

	        System.out.println("Pls input number (equal to raw and column of array) ");
	        int a = input.nextInt();
	        int array [][] = new int [a][a]; 
	        int k = 1;
for (int i = 0; i < array.length; i++) {
	for (int j = 0; j < array.length; j++) {
		array [i][j]=k;
		k++;
			
		} {
			System.out.print(array[i][j] + "  ");       // kak se printira matrica ako chislata sa ot razlichen razrqd, da sa edni pod drugi?
		}System.out.print(array[i][j] + " "); 
	}System.out.println();
}
	}

}
